extends ../layouts/common.pug

block content
  h1 Create a store
  if errors
    each error in errors
      .alert.alert-danger= error
  form(action="/stores/create", method="POST", enctype="multipart/form-data")
    div.form-group
      lable
        b Name
      input.form-control(type="text", name="name", value=values ? values.name : '')
    div.form-group
      lable
        b Upload Icon
      input.form-control-file(type="file", name="avatar")
    button.btn.btn-primary Create